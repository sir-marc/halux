{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es5",
		"sourceMap": false,
		"noImplicitAny": true,
		"module": "commonjs",
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es2017",
			"dom",
			"scripthost"
		],
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},
		"typeRoots": [
			"node_modules/@types/"
		]
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
